      <h2>Horaris i contacte</h2>
      <div class="separator">
        <section>
          <h3>Taproom</h3>
          <ul>
            <li>
              <a href="https://www.instagram.com/p/C4GnJz7Mhvq/?igsh=YnVlbzY1YjVnMnFr">Consulta els horaris aquí</a>
            </li>
            <li>623 19 28 15</li>
            <li><a href="mailto:taproom@doskiwisbrewing.com">Contacta amb Taproom</a></li>
          </ul>
        </section>
        <section>
          <h3>Fàbrica</h3>
          <ul>
            <li>Dl-Dv 09h-17h</li>
            <li>623 19 28 15</li>
            <li><a href="mailto:doskiwis@doskiwisbrewing.com">Contacta amb Fàbrica</a></li>
          </ul>
        </section>
      </div>
    </section>
    <section class="footer-list">
      <h2>Enllaços</h2>
      <ul>
