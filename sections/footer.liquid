    <section class="footer-list">
      <h2>Social</h2>
      <ul>
        <li><a href="instagram.com/doskiwisbrewing">Instagram</a></li>
        <li><a href="https://open.spotify.com/user/doskiwisbrewing?si=1f0fdbd53b1a48d8">Spotify</a></li>
